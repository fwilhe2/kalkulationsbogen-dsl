{
    "name": "kalkulationsbogen-dsl",
    "displayName": "kalkulationsbogen-dsl",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "kalkulationsbogen",
            "aliases": ["Kalkulationsbogen", "kalkulationsbogen"],
            "extensions": [".kb"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "kalkulationsbogen",
            "scopeName": "source.kalkulationsbogen",
            "path": "./syntaxes/kalkulationsbogen.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:kalkulationsbogen"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "kalkulationsbogen-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "chevrotain": "~10.5.0",
        "chalk": "~5.2.0",
        "commander": "~10.0.1",
        "langium": "~1.2.0",
        "vscode-languageclient": "~8.1.0",
        "vscode-languageserver": "~8.1.0",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
        "@types/node": "~16.18.33",
        "@types/vscode": "~1.78.1",
        "@typescript-eslint/eslint-plugin": "~5.59.7",
        "@typescript-eslint/parser": "~5.59.7",
        "eslint": "~8.41.0",
        "langium-cli": "~1.2.0",
        "typescript": "~5.0.4"
    }
}
