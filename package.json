{
    "name": "kalkulationsbogen-dsl",
    "displayName": "kalkulationsbogen-dsl",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "kalkulationsbogen",
            "aliases": ["Kalkulationsbogen", "kalkulationsbogen"],
            "extensions": [".kb"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "kalkulationsbogen",
            "scopeName": "source.kalkulationsbogen",
            "path": "./syntaxes/kalkulationsbogen.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:kalkulationsbogen"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "kalkulationsbogen-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "chevrotain": "~11.0.3",
        "chalk": "~5.3.0",
        "commander": "~11.0.0",
        "langium": "~2.0.2",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
        "@types/node": "~16.18.55",
        "@types/vscode": "~1.82.0",
        "@typescript-eslint/eslint-plugin": "~6.13.2",
        "@typescript-eslint/parser": "~6.7.3",
        "eslint": "~8.50.0",
        "langium-cli": "~2.0.1",
        "typescript": "~5.2.2"
    }
}
